<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Employee_Web</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Employee_Web.styles.css" asp-append-version="true" />
</head>

<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-4 w-100">
		<div class="container-fluid">

			<div class="d-flex align-items-center">
				<span class="me-3 fw-bold text-primary">Username</span>
				<form method="post" asp-controller="Home" asp-action="Logout" class="d-inline">
					<button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
				</form>
			</div>

			<div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
				<ul class="navbar-nav mb-2 mb-lg-0">
					<li class="nav-item"><a asp-controller="Employee" asp-action="Index" class="nav-link">Home</a></li>
					<li class="nav-item"><a class="nav-link">Link3</a></li>
					<li class="nav-item"><a class="nav-link">Link4</a></li>
				</ul>
			</div>

		</div>
	</nav>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>


	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>